{
  "short_name": "LinkedGen",
  "name": "Linkedin Message Generator",
  "version": "1.1",
  "manifest_version": 3,
  "background": {
    "scripts": ["app/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Linked Gem"
  },
  "content_scripts": [
    {
      "matches": [ "https://www.linkedin.com/in/*", "http://www.linkedin.com/in/*" ],
      "css": ["/css/root.css"],
      "js": ["/static/js/content.js"]
    }
  ],
  "permissions": ["https://www.linkedin.com/*"],
  "web_accessible_resources": [
    "/static/css/content.css", "/static/media/*"
  ],
  "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'"
}
